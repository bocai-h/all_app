<% provide(:page_title,"chat_room") %>
<!-- Top content -->
<%= content_for :template_js  do %>
    <script>
      $(function(){
        $('#room_authenticate').on('submit', function(e) {

          $(this).find('input[type="text"]').each(function(){
            if( $(this).val() == "" ) {
              e.preventDefault();
              $(this).addClass('input-error');
            }
            else {
              $(this).removeClass('input-error');
            }
          });

        });
      });
    </script>
<% end %>

<div class="top-content">

  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
          <div class="form-top">
            <div class="form-top-left">
              <h3>聊天室</h3>

              <p>用户名</p>
            </div>
            <div class="form-top-right">
              <i class="fa fa-key"></i>
            </div>
          </div>
          <div class="form-bottom">
            <%= form_for(:chat_room, url: chat_room_authenticate_path, :html => {:class => "room_authenticate", :id => "room_authenticate"}) do |f| %>
                <%= hidden_field_tag :user_name_key, UUID.new.generate %>
                <div class="form-group">
                  <label class="sr-only" for="form-username">Username</label>
                  <%= f.text_field :user_name, :class => "form-username form-control", :id => "form-username", :placeholder => "Username", :autocomplete => "off" %>
                </div>
                <button type="submit" class="btn">进入聊天室</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
