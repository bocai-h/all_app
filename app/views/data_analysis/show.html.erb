<div class="row-fluid">
  <div class="col-md-12">
    <div class="page_header">
      <div class="page_title"><p class="lead">业务清单详情</p></div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="col-md-12">
    <div class="page_help">
      <%= link_to "返回", {:controller => "data_analysis", :action => "index"}, {:class => "btn btn-primary"} %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="col-md-12">
    <div class="detail_area">
      <div class="table_area">
        <table class="table table-bordered">
          <tr>
            <td class="data_label">清单编号:</td>
            <td class="data_col"><%= @settlement.list_code %></td>
            <td class="data_label">代理人:</td>
            <td class="data_col"><%= @settlement.agent_name %></td>
            <td class="data_label">代理人代码:</td>
            <td class="data_col"><%= @settlement.agent_code %></td>
          </tr>
          <tr>
            <td class="data_label">代理证号:</td>
            <td class="data_col"><%= @settlement.agent_certif_code %></td>
            <td class="data_label">收款银行:</td>
            <td class="data_col"><%= @settlement.pay_bank %></td>
            <td class="data_label">收款账号:</td>
            <td class="data_col"><%= @settlement.pay_account %></td>
          </tr>
          <tr>
            <td class="data_label">账号名称:</td>
            <td class="data_col"><%= @settlement.account_name %></td>
            <td class="data_label">支付币种:</td>
            <td class="data_col"><%= @settlement.money_type %></td>
            <td class="data_label">打印日期:</td>
            <td class="data_col"><%= @settlement.print_date %></td>
          </tr>
          <tr>
            <td class="data_label">保单数量:</td>
            <td class="data_col"><%= @settlement.contract %></td>
            <td class="data_label">代扣税金:</td>
            <td class="data_col"><%= @settlement.cost_tax %></td>
            <td class="data_label">扣税后手续费金额:</td>
            <td class="data_col"><%= @settlement.after_cost_tax_fee %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="col-md-12">
    <div class="page_header">
      <div class="page_title"><p class="lead">清单业务列表</p></div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="col-md-12">
    <div class="detail_area">
      <tr class="table_area">
        <table class="table table-hover">
          <tr id="table_head">
            <td>业务号</td>
            <td>车牌号码</td>
            <td>险种名称</td>
            <td>投保人</td>
            <td>被保险人</td>
            <td>保单币种</td>
            <td>缴费期数</td>
            <td>签单保费</td>
            <td>实收保费</td>
            <td>手续费</td>
            <td>手续费比例</td>
            <td>起保日期</td>
            <td>业务部门</td>
            <td>备注</td>
          </tr>
          <% @settlement_details.each do |d| %>
              <tr>
                <td><%= d.service_code %></td>
                <td><%= d.car_number %></td>
                <td><%= d.insurance_name %></td>
                <td><%= d.insurance_person %></td>
                <td><%= d.insuranced_person %></td>
                <td><%= d.money_type %></td>
                <td><%= d.circle_time %></td>
                <td><%= d.insurance_money %></td>
                <td><%= d.actual_money %></td>
                <td><%= d.handling_charge %></td>
                <td><%= d.handling_charge_ratio %></td>
                <td><%= d.start_date %></td>
                <td><%= d.service_department %></td>
                <td><%= d.comment %></td>
              </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>